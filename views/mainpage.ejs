<div class="mainLogo">
  <a href="/" class="logo">
    <h1>Simple todo list</h1>
  </a>
</div>

<form action="/search" method="POST" class="search" autocomplete="off">
  <input type="text" name="name"><br>
  <button type="submit">Search</button>
</form>


<div class="addTasks">

  <form action="/" method="POST" class="addForm" autocomplete="off">
    <input type="text" name="description">
    <button type="submit">Add</button>
  </form>

  <h1>Taks to do:</h1>

  <ul class="todoList">
    <% for(var i=0; i < notDone.length; i++) { %>
    <li class="m-2">
      <span style="font-family: 'Questrial', sans-serif; font-size: 20px;"><%= notDone[i].name %></span>
      <form action="/<%= notDone[i]._id %>/completed" method="POST" style="display: inline;">
        <button type="submit" class="doneButton"><i class="fas fa-check fa-lg"></i></button>
      </form>
      <form action="/<%= notDone[i]._id %>/deleted" method="POST" style="display: inline;">
        <button type="submit" class="delButton"><i class="fas fa-times fa-lg"></i></button>
      </form>
    </li>
    <% } %>
  </ul>
</div>

<div class="doneTasks">
  <h2>Tasks done:</h2>

  <ul class="doneList">
    <% for(var i=0; i < doneTasks.length; i++) { %>
    <li>
      <form action="/<%= doneTasks[i]._id %>/undo" method="POST">
        <span style="font-family: 'Questrial', sans-serif; font-size: 20px;"><%= doneTasks[i].name %></span>
        <button type="submit" class="undoButton"><i class="fas fa-undo-alt"></i></button>
      </form>
    </li>
    <% } %>
  </ul>
  <form action="/deleted" method="POST">
    <button type="submit" class="clearAll" style="font-family: 'Questrial', sans-serif; font-size: 20px;">
      Clear all<i class="fas fa-broom fa-lg"></i>
    </button>
  </form>

</div>